<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Checkout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-22dp"
        tools:layout_editor_absoluteY="445dp">

        <TextView
            android:id="@+id/checkouttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="18"
            android:text="CHECKOUT"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="36dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/infoReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkouttitle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/emailReceiver"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"

                android:editable="false"
                android:clickable="false"
                android:ems="10"
                android:hint="Email"

                android:paddingLeft="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/addressReceiver"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:editable="false"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Phone"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/phoneReceiver"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:editable="false"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:paddingLeft="5dp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/orderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoReceiver"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ORDER DETAIL:"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingBottom="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="18"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:text="COST"
                    android:textColor="#000000"
                    android:textSize="16dp" />



                <TextView
                    android:id="@+id/itemsCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:text="USD 320"
                    android:textAlignment="textEnd"
                    android:textColor="#0ACF83"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="18"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:text="SHIPPING COST"
                    android:textColor="#000000"
                    android:textSize="16dp" />



                <TextView
                    android:id="@+id/shippingCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:text="USD 30"
                    android:textAlignment="textEnd"
                    android:textColor="#0ACF83"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="18"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:text="TOTAL COST"
                    android:textColor="#000000"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/totalCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:text="USD 350"
                    android:textAlignment="textEnd"
                    android:textColor="#0ACF83"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderDetail"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#0ACF83"
            android:text="CHECKOUT" />


    </RelativeLayout>

</RelativeLayout>